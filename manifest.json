{
  "name": "TabTap",
  "version": "1.0",
  "manifest_version": 3,
  "description": "Manage tab groups using your keyboard.",
  "permissions": ["tabs", "tabGroups", "storage"],
  "omnibox": { "keyword": "tt" },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "right": {
      "description": "Go to the next tab group",
      "global": false
    },
    "left": {
      "description": "Go to the previous tab group",
      "global": false
    },
    "up": {
      "description": "Expand all tab groups",
      "global": false
    },
    "down": {
      "description": "Collapse all inactive tab groups",
      "global": false
    },
    "create": {
      "description": "Create a new tab group",
      "global": false
    }
  }
}
